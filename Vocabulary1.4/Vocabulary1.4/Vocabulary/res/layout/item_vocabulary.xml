<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFEC8B"
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/word_english"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_weight="1"
                android:text="Accountant"
                android:textColor="#0000CD"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/icon_volue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/volue32" />

            <ImageView
                android:id="@+id/icon_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_mic32" />

            <ImageView
                android:id="@+id/icon_yeuthich_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_start32_false"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/icon_yeuthich_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_star32_true" 
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/word_VietNam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="kế toán viên"
            android:textColor="#0000CD"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
